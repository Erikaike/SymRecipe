{% block header %}
	<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
		<div class="container-fluid">
			{% if app.user %}
				<a class="navbar-brand" href="{{ path('home.index') }}">
					<img  width="50px" src="{{ app.user.profilePic }}" alt="profilePic">
				</a>
			{% endif %}
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarColor01">
				<ul class="navbar-nav me-auto">
					{% if app.user is null %}
						<li class="nav-item">
							<a class="nav-link active" href="{{ path('home.index') }}">HOME
								<span class="visually-hidden">(current)</span>
							</a>
						</li>
					{% else %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('ingredient.index') }}">Ingredients
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('recipe.index') }}">Recipes
							</a>
						</li>
					{% endif %}
					<li class="nav-item list-unstyled">
						<a class="nav-link" href="{{ path('contact.index') }}">Contact
						</a>
					</li>
				</ul>
			</div>
			<div class="d-flex">
				<ul class="navbar-nav me-auto"></ul>
				{% if app.user %}
					<li class="nav-item dropdown list-unstyled" style="margin-right: 5rem;">
						<a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">{{ app.user.fullName }}</a>
						<div class="dropdown-menu">
							<a class="dropdown-item" href="{{ path('user.edit', {id:app.user.id}) }}">Edit my infos</a>
							<a class="dropdown-item" href="{{ path('user.edit.password', {id : app.user.id}) }}">Edit my password</a>
							<div class="dropdown-divider"></div>
							{% if 'ROLE_ADMIN' in app.user.roles %}
								<a class="dropdown-item" href="{{ path('admin') }}">Administration</a>
								<div class="dropdown-divider"></div>
							{% endif %}
							<a class="dropdown-item" href="{{ path('security.logout') }}">Log out</a>
						</div>
					</li>
				{% else %}
					<li class="nav-item ml-2 list-unstyled">
						<a class="nav-link" href="{{ path('security.login') }}">Log in
						</a>
					</li>
					<li class="nav-item list-unstyled">
						<a class="nav-link" href="{{ path('security.registration') }}">Register
						</a>
					</li>
				{% endif %}
			</ul>
		</div>
	</div>
</nav>{% endblock %}
