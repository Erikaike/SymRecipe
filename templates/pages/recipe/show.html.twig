{% extends "base.html.twig" %}

{% block title %}Eri-cipe -
	{{ recipe.name }}
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-4">{{ recipe.name }}</h1>

		<div class="recipe_image">
			<img style="max-width: 500px;" src="{{ vich_uploader_asset(recipe, 'imageFile') }}">
		</div>

		<p>The average score of this Eri-cipe is {{ recipe.average|number_format(2, '.', ',') }}/5</p>
		<div>
			<span class="badge bg-primary">Created the : 
				{{ recipe.createdAt|date('d/m/Y') }}</span>
		</div>

		<div class"mt-4">
			{% if recipe.time %}
				<p>Time(min):
					{{ recipe.time }}</p>
			{% else %}
				Unknown
			{% endif %}
		</div>

		<div class"mt-4">
			{% if recipe.serving %}
				<p>Serving:
					{{ recipe.serving }}</p>
			{% else %}
				Unknown
			{% endif %}
		</div>

		<div class"mt-4">
			{% if recipe.difficulty %}
				<p>Difficulty:
					{{ recipe.difficulty}}/5
				</p>
			{% else %}
				Unknown
			{% endif %}
		</div>

		<div class"mt-4">
			{% if recipe.price %}
				<p>Price:
					{{ recipe.price}}
				</p>
			{% else %}
				Unknown
			{% endif %}
		</div>

		<div class"mt-4">
			<div>{{ recipe.description|raw}}</div>
		</div>

		<div class"mt-4">
			<p class="mt-4">Ingredients</p>
			{% for ingredient in recipe.ingredients %}
				<span class="badge bg-primary">
					{{ ingredient.name }}
				</span>
			{% endfor %}
		</div>
		<div class="mark">
			{{ form(form) }}
		</div>

	</div>

	{% endblock %}
