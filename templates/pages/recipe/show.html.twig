{% extends "base.html.twig" %}

{% block title %}SymRecipe -
	{{ recipe.name }}
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-4">{{ recipe.name }}</h1>

		<div class="recipe_image">
			<img style="max-width: 500px;" src="{{ vich_uploader_asset(recipe, 'imageFile') }}">
		</div>

		<p>La moyenne de cette recette est de {{ recipe.average|number_format(2, '.', ',') }}/5</p>
		<div>
			<span class="badge bg-primary">Créée le
				{{ recipe.createdAt|date('d/m/Y') }}</span>
		</div>

		<div class"mt-4">
			{% if recipe.time %}
				<p>Temps(min):
					{{ recipe.time }}</p>
			{% else %}
				Temps non renseigné
			{% endif %}
		</div>

		<div class"mt-4">
			{% if recipe.serving %}
				<p>Temps(min):
					{{ recipe.serving }}</p>
			{% else %}
				Nombre de personne non renseigné
			{% endif %}
		</div>

		<div class"mt-4">
			{% if recipe.difficulty %}
				<p>Difficulté:
					{{ recipe.difficulty}}/5
				</p>
			{% else %}
				Difficultée non renseignée
			{% endif %}
		</div>

		<div class"mt-4">
			{% if recipe.price %}
				<p>Prix:
					{{ recipe.price}}
				</p>
			{% else %}
				Prix non renseignée
			{% endif %}
		</div>

		<div class"mt-4">
			<div>{{ recipe.description|raw}}</div>
		</div>

		<div class"mt-4">
			<p class="mt-4">Ingredients</p>
			{% for ingredient in recipe.ingredients %}
				<span class="badge bg-primary">
					{{ ingredient.name }}
				</span>
			{% endfor %}
		</div>

		<div class="mark">
			{{ form(form) }}
		</div>

	</div>

	{% endblock %}
