{% extends "base.html.twig" %}

{% block title %}Eri-cipe - Home
{% endblock %}

{% block body %}
	<div class="ratio ratio-16x9">
			<iframe src="https://www.youtube.com/embed/x2DArX6YKeo?autoplay=1&loop=1&mute=1&amp;controls=0&amp;start=421" frameborder="0" allowfullscreen></iframe>
		</div>
	<div class="container mt-4">
		<h1 class="lt-4">Welcome {% if app.user %} {{app.user.fullName}} {% endif %}ðŸ˜Š</h1>
	</div>
	<div class="recipes">
		<div class="p-5" style="font-size: 3em;">
			<span
				{{ stimulus_controller('symfony/ux-typed', {
					strings: [
						'Add some spices to your life with a few Eri-cipes',
					],
					loop: true,
					showCursor: true,
					cursorChar: 'âœ¨',
				}) }}
			>
			</span>
		</div>
		<div class="mt-2 d-flex justify-content-around">
			{% for recipe in recipes %}
			<a style="text-decoration:none" href="{{ path('recipe.show', {id: recipe.id}) }}">
				<div class="card border-primary mb-3 ml-3" style="max-width: 20rem;">
					<div class="card-header">Eri-cipe n{{ recipe.id }}</div>
					<div class="card-body">
						<h4 class="card-title">{{ recipe.name }}</h4>
						<p class="card-text">{{ recipe.description|slice(0, 100) ~ '...' }}</p>
					</div>
				</div>
			</a>
			{% endfor %}
		</div>
	</div>
{% endblock %}
